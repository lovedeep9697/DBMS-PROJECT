<body>

	<nav class="navbar navbar-default navbar-static-top navbar-inverse">
		<div class="container">

			<ul class="nav navbar-nav">
				<!-- Logo -->
				<li><a class="navbar-brand" href=""><img alt ="BRAND" src=""></a></li>
			</ul>

			<!-- search Bar -->
			<form class="navbar-form navbar-left" >
