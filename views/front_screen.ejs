			<!-- Sign In  -->
			

<%=movies[0].duration%>

<% for (movie in movies){ %>

		<div class="movie_card" id="bright">
  <div class="info_section">
    <div class="movie_header">
      <img class="locandina" src="<%=movies[movie].img_link%>"/>
      <h1><%=movies[movie].movie_name%></h1>
      <!-- <h4><%=movies[movie].release_date%></h4> -->
      <span class="minutes"><%=movies[movie].duration%> mins</span>
      <p class="type"><%=movies[movie].genre%></p>
    </div>
    <div class="movie_desc">
      <p class="text">
        <!-- Set in a world where fantasy creatures live side by side with humans. A human cop is forced to work with an Orc to find a weapon everyone is prepared to kill for.  -->
        <%=movies[movie].description%>
      </p>
    </div>
    <div class="movie_social">
      <ul>
        <li><i class="material-icons">share</i></li>
        <li><i class="material-icons">î¡½</i></li>
        <li><i class="material-icons">chat_bubble</i></li>
      </ul>
    </div>
  </div>
  <div class="blur_back bright_back"></div>
</div>
<%}%>

		
	
</body>

</html>